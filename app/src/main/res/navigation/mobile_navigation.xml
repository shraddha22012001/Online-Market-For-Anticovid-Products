        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.groceryapp.ui.slideshow.SlideshowFragment"
        android:label="Search"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.groceryapp.ui.settings.SettingFragment"
