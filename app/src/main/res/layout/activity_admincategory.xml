<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_home"
    android:background="#EFACA7">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textAlignment="center"
        android:gravity="center_horizontal">

    </TextView>
<LinearLayout
    android:id="@+id/linear_category_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/slogan_category"
    android:layout_marginTop="30dp"
    >
    <ImageView
        android:id="@+id/masks"
        android:src="@drawable/masks"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
></ImageView>
    <ImageView
        android:id="@+id/sanitizers_handwash"
        android:src="@drawable/sanitizers"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        ></ImageView>
    <ImageView
        android:id="@+id/Boost_immunity"
        android:src="@drawable/boost_ur_imunity"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        ></ImageView>

</LinearLayout>
    <LinearLayout
        android:id="@+id/linear_category_layout_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear_category_layout"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/thermomertes"
            android:src="@drawable/thermometers"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            ></ImageView>
        <ImageView
            android:id="@+id/disinfectant"
            android:src="@drawable/disinfectants"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            ></ImageView>
        <ImageView
            android:id="@+id/doctors_corner"
            android:src="@drawable/doctors_corner"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            ></ImageView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_category_layout_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear_category_layout_1"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/pulse_oximeter"
            android:src="@drawable/pulse_oximeter"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            ></ImageView>
        <ImageView
            android:id="@+id/ppe_kits"
            android:src="@drawable/ppe_kits"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            ></ImageView>
        <ImageView
            android:id="@+id/gloves"
            android:src="@drawable/gloves"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            ></ImageView>

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:text="Check New Orders"
        android:textColor="#FFFAFC"
        android:background="#E91E63"
        android:layout_below="@id/linear_category_layout_2"
        android:layout_marginTop="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maintain Products"
        android:textColor="@color/white"
        android:background="#E91E63"
        android:layout_below="@id/check_orders_btn"
        android:layout_marginTop="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/white"
        android:background="#E91E63"
        android:layout_below="@id/maintain_btn"
        android:layout_marginTop="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    </RelativeLayout>
</FrameLayout>

