<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Admin.AdminMaintainProductsActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
        android:id="@+id/Admin_product_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:scaleType="centerCrop"
        android:layout_marginTop="2dp"
        >
    </ImageView>
        <EditText
            android:id="@+id/Admin_product_nm"
            android:background="@drawable/input_design_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:padding="6dp"
            android:layout_below="@+id/Admin_product_img"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/Admin_product_descrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_below="@+id/Admin_product_nm"
        android:background="@drawable/input_design_1"
        android:hint="Product Description"
        android:padding="6dp"
        android:textSize="18dp"
        ></EditText>

    <EditText
        android:id="@+id/Admin_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:padding="6dp"
        android:inputType="number"
        android:gravity="center_horizontal"
        android:layout_below="@+id/Admin_product_descrip"
        android:background="@drawable/input_design_1"
        android:hint="Product price"
        android:textSize="22dp"
        ></EditText>
        <Button

            android:id="@+id/Apply_changes_btn"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Admin_product_price"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="#E91E63"
            android:padding="10dp"
            android:text="Apply Changes"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <Button

            android:id="@+id/Delete_product_btn"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Apply_changes_btn"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="#E91E63"
            android:padding="10dp"
            android:text="Delete This Product"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>