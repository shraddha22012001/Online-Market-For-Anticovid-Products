<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerLoginActivity">
    
    <ImageView
        android:id="@+id/seler_login_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/seler_login"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/seler_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seler_login_image"
        android:text="Seller Registration Form"
        android:textColor="#266028"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/seler_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seler_login_title"
        android:hint="Email......"
        android:padding="3dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#8BC34A"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="text"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/seler_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seler_login_email"
        android:hint="Password......"
        android:padding="3dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#8BC34A"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="text"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <Button

        android:id="@+id/register_seler_btn"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>